%h1 Misje
- if current_user.team
  - missions.each do |mission|
    .mission
      %h2= mission.name
      %span= mission.start_at
      = link_to 'Dane misji', mission.external_url, target: '_blank'
      - Mission.statuses.keys.each do |status|
        = link_to t(status, scope: 'participation.state'),
        mission_participation_path(mission, status: status),
        method: :put,
        class: "btn btn-default #{"active" if mission.status == status }"
